<script type="text/javascript">
  $( document ).ready(function() {

          console.log(["object_type","discipline","creator","frame","license"]) // liquid array of one or more fields for facetting

          // This JavaScript controls the expanding and contracting facet headers.
          // Additional JS for this page in assets/js/facets.js
          $('.facet-bn[aria-expanded]').click(function(event){
            $(this).parent().parent().toggleClass("active");
            // this selector might return multiple elements
            $(this).children('legend').children('.facets-chevron').toggleClass("facets-chevron-bottom facets-chevron-top");
          });
        

  });
</script>

